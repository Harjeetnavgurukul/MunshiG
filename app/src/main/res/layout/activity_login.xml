<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_munshig"
        android:id="@+id/munshiG"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/munshiG"
        android:id="@+id/phone"
        android:layout_marginTop="50dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_phone_call"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/edit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/munshiG"
            >

            <EditText
                android:id="@+id/input_name1"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:hint="Phone Number"
                />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/phone"
        android:id="@+id/phone2"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_locked"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="17dp"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/edit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/munshiG"
            >

            <EditText
                android:id="@+id/input_name2"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:hint="OTP"
                />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="abc"
        android:layout_below="@id/phone2"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification Code will be sent to your phone number"
        android:layout_above="@+id/sendBtn"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginBottom="10sp"/>


    <Button
        android:id="@+id/sendBtn"
        style="@android:style/ButtonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_blue_dark"
        android:text="Send OTP"
        android:textColor="@android:color/background_light" />





</RelativeLayout>